@using EntityLayer.Concrete
@model Message
@{
    ViewBag.Title = "Compose";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Yeni Mesaj</h1>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>
<section class="content">
    <div class="container-fluid">
        <div class="row">
            @Html.Action("_MessageSideBar", "Message")
            <!-- /.col -->
            <div class="col-md-9">
                @using (Html.BeginForm("Compose", "Message", FormMethod.Post))
                {
                    <div class="card card-primary card-outline">
                        <div class="card-header">
                            <h3 class="card-title">Yeni Mesaj Yaz</h3>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <div class="form-group">
                                @Html.TextBoxFor(m => m.ReceiverMail, new { @class = "form-control", placeholder = "Kime :" })
                                @Html.ValidationMessageFor(m => m.ReceiverMail, null, new { @class = "alert-danger" })
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(m => m.MessageSubject, new { @class = "form-control", placeholder = "Konu :" })
                                @Html.ValidationMessageFor(m => m.MessageSubject, null, new { @class = "alert-danger" })
                            </div>
                            <div class="form-group">
                                @Html.TextAreaFor(m => m.MessageContent, new { @id = "compose-textarea", @class = "form-control", style = "height: 300px; display: none;",@ValidateRequestMode="Disabled" })
                                @Html.ValidationMessageFor(m => m.MessageContent, null, new { @class = "alert-danger" })
                            </div>
                            <div class="form-group">
                                <div class="btn btn-default btn-file">
                                    <i class="fas fa-paperclip"></i> Dosya Eki
                                    <input type="file" name="attachment">
                                </div>
                                <p class="help-block">Max. 32MB</p>
                            </div>
                        </div>
                        <!-- /.card-body -->
                        <div class="card-footer">
                            <div class="float-right">
                                <button type="button" class="btn btn-default"><i class="fas fa-pencil-alt"></i> Taslak</button>
                                <button type="submit" class="btn btn-primary"><i class="far fa-envelope"></i> Gönder</button>
                            </div>
                            <a href="/Message/Inbox" class="btn btn-default"><i class="fas fa-times"></i> Vazgeç</a>
                        </div>
                        <!-- /.card-footer -->
                    </div>
                }
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div><!-- /.container-fluid -->
</section>

