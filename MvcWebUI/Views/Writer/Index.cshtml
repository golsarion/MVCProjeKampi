@using EntityLayer.Concrete
@model List<Writer>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section class="content-header">
    <h2 class="text-center">YAZAR LİSTESİ</h2>
</section>
<section class="content">

    <!-- Default box -->
    <div class="card card-solid col-10">
        <div class="card-body pb-0">
            <div class="row d-flex align-items-stretch">
                @foreach (Writer item in Model)
                {
                <div class="col-12 col-sm-6 col-md-4 d-flex align-items-stretch">
                    <div class="card bg-light">
                        <div class="card-header text-muted border-bottom-0">
                            @item.WriterTitle
                        </div>
                        <div class="card-body pt-0">
                            <div class="row">
                                <div class="col-7">
                                    <h2 class="lead"><b>@item.WriterName @item.WriterSurname</b></h2>
                                    <p class="text-muted text-sm">@item.WriterAbout </p>
                                    <ul class="ml-4 mb-0 fa-ul text-muted">
                                        <li class="small"><span class="fa-li"><i class="fas fa-lg fa-envelope"></i></span>@item.WriterMail</li>
                                    </ul>
                                </div>
                                <div class="col-5 text-center">
                                    <img src="~/AdminLTE-3.0.4/dist/img/user1-128x128.jpg" alt="" class="img-circle img-fluid">
                                </div>
                            </div>
                        </div>
                        <div class="card-footer">
                            <div class="text-right">
                                <a href="#" class="btn btn-sm bg-teal">
                                    <i class="fas fa-comments"></i> Yazarın Başlıkları
                                </a>
                                <a href="/Writer/EditWriter/@item.WriterID" class="btn btn-sm btn-primary">
                                    <i class="fas fa-user"></i> Profil
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                }
            </div>
        </div>
        <!-- /.card-body -->
        <div class="card-footer">
            
        </div>
        <!-- /.card-footer -->
    </div>
    <!-- /.card -->

</section>


